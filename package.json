{
    "name": "@ecotoken/monorepo",
    "private": true,
    "workspaces": [
        "apps/admin",
        "apps/user",
        "apps/workshop",
        "packages/api",
        "packages/auth",
        "packages/config/tailwind",
        "packages/config/prettier",
        "packages/config/eslint",
        "packages/db",
        "packages/ui",
        "packages/email"
    ],
    "scripts": {
        "build": "dotenv -- turbo build",
        "clean": "run-script-os",
        "clean:windows": "del /f /s node_modules",
        "clean:default": "rm -rf node_modules",
        "clean:workspaces": "turbo clean",
        "db:generate": "dotenv -- turbo db:generate",
        "db:push": "dotenv -- turbo db:push",
        "db:seed": "dotenv -- turbo db:seed",
        "db:studio": "dotenv -- turbo db:studio",
        "dev": "dotenv -- turbo dev --parallel",
        "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path .gitignore",
        "lint": "turbo lint && manypkg check",
        "lint:fix": "turbo lint:fix && manypkg fix",
        "type-check": "turbo type-check",
        "postinstall": "npm run db:generate"
    },
    "dependencies": {
        "@cosmjs/cosmwasm-stargate": "^0.28.11",
        "@cosmjs/launchpad": "^0.27.1",
        "@cosmjs/proto-signing": "^0.28.11",
        "@cosmjs/stargate": "^0.28.11",
        "@cosmos-client/core": "^0.45.9",
        "@ecotoken/eslint-config": "^0.0.0",
        "@ecotoken/prettier-config": "^0.0.0",
        "@ecotoken/tailwind-config": "^0.0.0",
        "@ecotoken/user": "^0.0.0",
        "@ianvs/prettier-plugin-sort-imports": "^3.7.1",
        "@manypkg/cli": "^0.20.0",
        "@metaplex-foundation/js": "^0.18.2",
        "@regen-network/api": "^0.5.0",
        "@solana/spl-token": "^0.3.7",
        "@solana/wallet-adapter-base": "^0.9.22",
        "@solana/wallet-adapter-react": "^0.15.30",
        "@solana/wallet-adapter-react-ui": "^0.9.29",
        "@solana/wallet-adapter-wallets": "^0.19.15",
        "@solana/web3.js": "^1.73.3",
        "@types/prettier": "^2.7.2",
        "axios": "^1.3.4",
        "buffer-layout": "^1.2.2",
        "dotenv-cli": "^7.0.0",
        "prettier": "^2.8.4",
        "run-script-os": "^1.1.6",
        "turbo": "^1.8.3",
        "typescript": "^5.0.0"
    },
    "devDependencies": {
        "@types/coingecko-api": "^1.0.10"
    },
    "license": "AGPL-3.0-or-later"
}
